{
    "manifest_version": 3,
    "name": "AI Prompt Cooker",
    "description": "AI Prompt Assistant Extension",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html",
        "default_width": 800,
        "default_height" : 600
    },
    "background": {
        "service_worker": "background.js"
      },
    "permissions": ["storage","activeTab"],
    "host_permissions": [
        "*://*/*"
    ]
}
